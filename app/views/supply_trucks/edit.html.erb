<%= form_with url:"/supply_trucks/#{@supply_truck.id}", method: :patch, local: true do |form| %>
  <%= form.label 'Driver Name' %>
  <%= form.text_field :driver_name %></br>

  <%=form.label 'Number of Daily Deliveries' %>
  <%= form.number_field :number_of_daily_deliveries %></br>

  <%= form.label 'Refrigerated?' %>
  <%= form.check_box :refrigerated %></br>

  <%= form.submit 'Update Supply Truck' %>
<% end %>
