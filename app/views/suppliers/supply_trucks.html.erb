<%# %>
<a href="/">Home</a>
<a href="/eats">Restaurants & Chefs</a>
<a href="/suppliers">Supplier Index</a>
<h1> Supplier: <%= @supplier.name %></h1>
<p><a href="/suppliers/<%= @supplier.id %>/supply_trucks/new"> Create New Supply Truck</a></p>

<%= link_to "Sort Supply Trucks By Name", "/suppliers/#{@supplier.id}/sorted" %>
<% @supplier.supply_trucks.each do |supply_truck| %>


    <h2>Truck: <%= supply_truck.id %></h2>
    <h3>Driver: <%= supply_truck.driver_name %></h3>
    <p>Daily Deliveries: <%= supply_truck.number_of_daily_deliveries %></p>
    <p>Refrigerated?: <%= supply_truck.refrigerated %></p>

    <%= link_to "Update Supply Truck", "/supply_trucks/#{supply_truck.id}/edit" %>
<% end %>
