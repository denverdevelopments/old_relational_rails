<%# app/views/chefs/edit.html.erb %>

<%= link_to "Home  .", "/" %>
<%= link_to ".  Restaurants Index  .", "/restaurants" %>
<%= link_to ".  Chefs Index", "/chefs" %><br/><br/>

<%= form_with url: "/chefs/#{@chef.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, placeholder: "#{@chef.name}" %><br/><br/>

  <%= form.label 'Experience' %>
  <%= form.number_field :experience, placeholder: "#{@chef.experience}"%><br/><br/>

  <%= form.label 'Makes Desserts' %>
  <%= form.check_box :desserts, checked: @chef.desserts %><br/><br/>

  <%= form.submit 'Update Chef' %>
<% end %>
