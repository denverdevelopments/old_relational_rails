<%# app/views/restaurants/show.html.erb %>

<%= link_to "Home  .", "/" %>
<%= link_to ".  Restaurants Index  .", "/restaurants" %>
<%= link_to ".  Chefs Index", "/chefs" %><br/><br/>

<h2><%= @restaurant.name %></h2>
<p>(<%= @restaurant.count_chefs %>)  Chefs on Staff: <%= link_to ".  .  see chefs", "/restaurants/#{@restaurant.id}/chefs" %></p>

<p>Restaurant ID: <%= @restaurant.id %></p>
<p>Seats: <%= @restaurant.capacity %></p>
<% if @restaurant.has_bar %>
  <p>Has a Bar</p>
<% else %>
  <p>Does Not Have a Bar</p>
<% end %><br/>

<%= link_to "Update Restaurant", "/restaurants/#{@restaurant.id}/edit" %><br/><br/>

<form action="/restaurants/<%= @restaurant.id %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="DELETE">
<input type="submit" value="Delete this Restaurant"/>
</form>
