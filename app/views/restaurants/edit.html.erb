<%# app/views/restaurants/edit.html.erb %>

<%= link_to "Home  .", "/" %>
<%= link_to ".  Restaurants Index  .", "/restaurants" %>
<%= link_to ".  Chefs Index", "/chefs" %><br/><br/>

<%= form_with url: "/restaurants/#{@restaurant.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, placeholder: "#{@restaurant.name}" %><br/><br/>

  <%= form.label 'Capacity' %>
  <%= form.number_field :capacity, placeholder: "#{@restaurant.capacity}"%><br/><br/>

  <%= form.label 'Has a Bar' %>
  <%= form.check_box :has_bar, checked: @restaurant.has_bar %><br/><br/>

  <%= form.submit 'Update Restaurant' %>
<% end %>
